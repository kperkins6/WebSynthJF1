<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <% @users.each do |user| %>
        <% if user.id == article.user_id %>
          <% @user = user %>
        <% end %>
      <% end %>


      <tr>
        <td><%= article.name %></td>

        <td>
  
<a href="<%= article.url %>"><%= article.name %></a><div class="web-preview"><iframe security="restricted" sandbox="" src="<%= article.url %>" width = "500px" height = "500px"></iframe></div>

</td>

        <td><%= @user.name %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
</div>
