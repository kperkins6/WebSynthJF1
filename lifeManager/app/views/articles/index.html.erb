<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <% @users.each do |user| %>
        <% if user.id == article.user_id %>
          <% @user = user %>
        <% end %>
      <% end %>
<div class="modal fade" id="frame-<%= article.id.to_s %>" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"><%= article.name %></h4>
        </div>
        <div class="modal-body">
          <iframe security="restricted" sandbox="" src="<%= article.url %>" width = "500px" height = "500px"></iframe>
        </div>
      </div> 
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>




      <tr>
        <td><%= link_to 'Check out this Article', "#", "data-toggle" => "modal", 'data-target' => '#frame-'+article.id.to_s %></td>
        <td><%= article.name %></td>
        <td><%= @user.name %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
</div>
